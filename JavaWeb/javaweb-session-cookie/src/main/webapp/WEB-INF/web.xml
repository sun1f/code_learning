<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">
    <servlet>
        <servlet-name>CookieDemo01</servlet-name>
        <servlet-class>com.sun1f.servlet.CookieDemo01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieDemo01</servlet-name>
        <url-pattern>/cookie_demo1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookieDemo02</servlet-name>
        <servlet-class>com.sun1f.servlet.CookieDemo02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieDemo02</servlet-name>
        <url-pattern>/cookie_demo2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionDemo1</servlet-name>
        <servlet-class>com.sun1f.servlet.SessionDemo01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionDemo1</servlet-name>
        <url-pattern>/SessionDemo1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionDemo2</servlet-name>
        <servlet-class>com.sun1f.servlet.SessionDemo02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionDemo2</servlet-name>
        <url-pattern>/SessionDemo2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SessionDemo3</servlet-name>
        <servlet-class>com.sun1f.servlet.SessionDemo03</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionDemo3</servlet-name>
        <url-pattern>/SessionDemo3</url-pattern>
    </servlet-mapping>

    <!--设置session默认的自动失效时间-->
    <session-config>
        <!--15分钟后session自动失效（以分钟为单位）-->
        <session-timeout>15</session-timeout>
    </session-config>
</web-app>
